package lab.exercise;

import java.util.Scanner;

public class SumOfMultiplesOf3And5 {
	public static int SumUptoNOf3Or5(int n) {
		int sum = 0;
		int i = 1;
		while(i <= n) {
			if(i % 3 == 0 || i % 5 == 0) {
			sum += i;
		
		}
			i++;
		}
		return sum;
}
public static void main(String[] args) {
	int n;
	Scanner sc = new Scanner(System.in);
	n = sc.nextInt();
	int ans = SumUptoNOf3Or5(n);
	System.out.println(ans);
}
}
